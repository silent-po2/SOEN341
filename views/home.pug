//- inspired by bootstrap sample https://getbootstrap.com/docs/4.1/examples/carousel/ & https://mdbootstrap.com/javascript/carousel/
extends layout

block content
  // Carousel Wrapper
  #carousel-example-2.carousel.slide.carousel-fade(data-ride='carousel')
    // Indicators
    ol.carousel-indicators
      li.active(data-target='#carousel-example-2', data-slide-to='0')
      li(data-target='#carousel-example-2', data-slide-to='1')
      li(data-target='#carousel-example-2', data-slide-to='2')
    // /.Indicators
    // Slides
    .carousel-inner(role='listbox')
      .carousel-item.active
        .view
          img.d-block.w-100(src='/pics/homepage1.jpg', alt='First slide')
          .mask.rgba-black-light
        .carousel-caption
          h3.h3-responsive.text-muted KiWi 
          p
            font(color='black') KiWi 
      .carousel-item
        // Mask color
        .view
          img.d-block.w-100(src='/pics/homepage2.jpg', alt='Second slide')
          .mask.rgba-black-strong
        .carousel-caption
          h3.h3-responsive KiWi Teacher
          p
            font KiWi Teacher
      .carousel-item
        // Mask color
        .view
          img.d-block.w-100(src='/pics/homepage3.jpg', alt='Third slide')
          .mask.rgba-black-slight
        .carousel-caption
          h3.h3-responsive.text-muted KiWi Parent
          p 
            font(color='black') KiWi Parent
    // /.Slides
    // Controls
    a.carousel-control-prev(href='#carousel-example-2', role='button', data-slide='prev')
      span.carousel-control-prev-icon(aria-hidden='true')
      span.sr-only Previous
    a.carousel-control-next(href='#carousel-example-2', role='button', data-slide='next')
      span.carousel-control-next-icon(aria-hidden='true')
      span.sr-only Next
    // /.Controls
  // /.Carousel Wrapper

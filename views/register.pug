extends layout

block content
  br
  h3 Register 
  br
  | Simply enter your details and join our community.
  br
  br
  .container
  //- h4 
  //- p
  //- img.img-responsive(src='/pics/reg1.jpeg' alt='Chania' width='360' height='200')

  form#register-form(method='post', action='/register')
      .form-group
        label(for='text') Firstname: 
        input#firstname.form-control(type='text', name='firstname', placeholder='firstname')
      .form-group
        label(for='text') Lastname: 
        input#lastname.form-control(type='text', name='lastname', placeholder='lastname')
      .form-group
        label(for='email') Email: 
        input#email.form-control(type='email', name='email', placeholder='email')
      .form-group
        label(for='password') Password: 
        input#password.form-control(type='password', name='password', placeholder='password')
      .form-group
        label(for='password') Confirm your password: 
        input#password2.form-control(type='password', name='password2', placeholder='password')
      label(for='userType') 
      input(type='radio', name='userType', value='T', checked='checked')
      |I am a Teacher
      br
      label(for='userType') 
      input(type='radio', name='userType', value='P')
      |I am a Parent
      br
      button.btn.btn-success.form-control(type='submit') Submit
      a(href='/login') Already have an account?
    

        ul.navbar-nav.mr-auto
          if user
            li.nav-item(class=(title == 'Profile'? 'active' : ''))
              a.nav-link(href='/Profile') Profile
            li.nav-item(class=(title == 'Dashboard'? 'active' : ''))
              a.nav-link(href='/dashboard') Dashboard
          if !user
            li.nav-item(class=(title == 'Register'? 'active' : ''))
              a.nav-link(href='/register') Register
            li.nav-item(class=(title == 'Login'? 'active' : ''))
              a.nav-link(href='/login') Login
          li.nav-item.dropdown

            .dropdown-menu(aria-labelledby='dropdown01')
              a.dropdown-item(href='/contacts') Contacts
              a.dropdown-item(href='#') Action2
              a.dropdown-item(href='#') Action3
        ul.navbar-nav.navbar-right
          if user
            li.nav-item
              a.nav-link(href='/logout') Logout
          if user
            li.nav-item
              a.nav-link(href='/notifications') Notifications
        if user      
          form.form-inline.my-2.my-lg-0(action='/search', method='post')
            input.form-control.mr-sm-2(type='text',name='Search', placeholder='Search', aria-label='Search')
            button.btn.btn-outline-success.my-2.my-sm-0(type='submit') Search
